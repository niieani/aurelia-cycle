{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "sourceMap": true,
    "noEmitHelpers": true,
    "rootDir": "src/",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "moduleResolution": "node" 
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "doc"
  ]
}
